@import '../common/func'

#view-user-auth
  padding: 0 36px
  .mt16
    margin-top: 16px
  .mt32
    margin-top: 32px
  input
    box-sizing: border-box
    width: 100%
    padding: 10px 12px
    outline: 0
    border: 0
    border-bottom: 1px solid #C4C4C4
    background: rgba(0, 0, 0, 0)
    border-radius: 0
  input:focus
    border-color: #46C015
  button
    box-sizing: border-box
    width: 100%
    height: 40px
    line-height: 40px
    background: weile-red-color
    color: #fff
    outline: 0
    border: 0
    cursor: pointer
    -webkit-appearance: none
    border-radius: 100px
  button.disabled
    background: #999
  a
    color: weile-red-color
  .uuid-wrap
    padding-top: 24px
  .auth-code-wrap
    position: relative
    padding-right: 114px
    button
      position: absolute
      right: 0
      bottom: 0
      width: 102px
  .password-wrap
    position: relative
    i 
      position: absolute
      top: 0
      right: 0
      padding: 6px 10px
      color: #444
  .forget-password-wrap
    margin-top: 20px
    color: weile-red-color    


