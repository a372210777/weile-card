@import '../common/func'

#view-leshang-leshang
  margin-bottom: 56px
  .banner
    position: relative
    img
      display: block
      width: 100%
    li
      position: absolute
      bottom: 8px
      right: 14px 
      width: 48px
      height: 48px
      background: center center no-repeat;
      background-size: 56px;
      border: 1px solid #fff;
    li:first-of-type
      bottom: 13px
      right: 9px 
      
  .base-info-section
    background: #fff
    .contact-wrap
      position: relative
      padding: 10px
      padding-right: 48px
      background: linear-gradient(#E0E0E0 0%, #E0E0E0 50%, #fff 50%, #fff 100%) no-repeat bottom
      background-size: 100% 1px    
      .name
        padding-bottom: 4px
      .address
        font-size: 12px
      .phone
        position: absolute
        top: 16px
        right: 16px
        color: green
    .star-wrap
      width: 60px
      height: 14px
      margin: 4px 10px
      background: url('/img/leshang_star.png') no-repeat
      background-size: 60px
      div
        width: 80%
        height: 100%
        background: url('/img/leshang_star.png') no-repeat
        background-size: 60px
        background-position: 0 -15px
    .hot-wrap
      font-size: 12px
      margin: 4px 10px
      color: #FF9900
      i 
        font-size: 12px
        margin-right: 4px
  .info-section
    background: #fff
    margin-top: 16px
    .title
      height: 32px
      line-height: 32px
      padding: 0 10px
      background: linear-gradient(#E0E0E0 0%, #E0E0E0 50%, #fff 50%, #fff 100%) no-repeat bottom
      background-size: 100% 1px
    .content
      min-height: 32px
      padding: 8px 10px
      font-size: 12px
      color: #555
      li 
        padding-bottom: 6px
  .card-list-wrap
    a:first-of-type li 
      border-top: 0
    li
      padding-right: 12px
      border-top: 1px dashed #fff
      color: #fff
      i
        line-height: 40px
      .name
        padding: 10px      
        margin-right: 8px
    li.coupon
      background: coupon-color
    li.cash-coupon 
      background: cash-coupon-color      
    li.member-card 
      background: member-card-color   
  .app-download-wrap
    height: 40px
    line-height: 40px
    padding: 0 12px 0 8px
    
    