@import './func'

.f-input
  box-sizing: border-box
  width: 100%
  padding: 10px 12px
  outline: 0
  border: 0
  border-bottom: 1px solid #C4C4C4
  background: rgba(0, 0, 0, 0)
  border-radius: 0
.f-input:focus
  border-color: #46C015
.f-button
  box-sizing: border-box
  width: 100%
  height: 40px
  line-height: 40px
  background: weile-red-color
  color: #fff
  outline: 0
  border: 0
  cursor: pointer
  -webkit-appearance: none
  border-radius: 100px
.f-button.disabled
  background: #999
    
.f-number-input-wrap
  position: relative
  display: inline-block
  input
    box-sizing: border-box
    width: 48px
    height: 32px
    padding: 6px 0
    margin: 0 4px
    border: 1px solid #dce4ec
    outline: 0
    border-radius: 2px
    font-size: 15px
    text-align: center
    -webkit-appearance: none
  input:focus
    border-color: #1ABC9C
  span
    box-sizing: border-box
    display: inline-block
    position: relative
    vertical-align: bottom
    width: 32px
    height: 32px
    border-radius: 2px
    line-height: 32px
    text-align: center
    cursor: pointer
  .minus
    border: 1px solid #dce4ec
  span:before,span:after
    box-sizing: border-box
    content: ""
    display: block
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin: auto
    border-radius: 2px
    width: 18px
    height: 3px
  .plus:after
    transform(rotate(90deg))
  .minus:after,.plus
    background: weile-red-color
  .plus:before,.plus:after
    background: #fff
  .minus.disabled:after,.plus.disabled
    background: #999
