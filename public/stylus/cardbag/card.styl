@import '../common/func'

.f-my-card-wrap
  position: relative
  margin-top: 8px
  .qrcode-wrap
    position: absolute
    top: 0
    right: 0
    bottom: 0
    width: 118px
    box-sizing: border-box
    padding: 8px
    border: 1px dashed #ccc
    border-left: 0px
    border-radius: 0 4px 4px 0
    p
      padding: 8px
      color: #999
  .card
    position: relative
    height: 118px
    border-radius: 4px
    color: #fff
    box-shadow: .5px .5px 1px #a8a8a8
    transition(all .4s ease)
    .qrcode
      position: absolute
      width: 48px
      height: 48px
      right: 0
      background: url('/img/qr-code.png') no-repeat center center
      background-size: 24px
    .stale
      position: absolute
      right: 0
      top: 10px
      height: 24px
      line-height: 24px
      padding: 0 4px
      background-color: #C9C9C9
      color: #454545
    .stale:before
        content: ''
        position: absolute
        left: -12px
        border: 12px solid #C9C9C9
        border-left-color: rgba(0, 0, 0, 0)
        border-right: 0
    .no
      position: absolute
      bottom: 8px
      left: 10px
      font-size: 12px
    .logo
      position: absolute
      width: 56px
      height: 56px
      right: 18px
      bottom: 12px
      border-radius: 100px
      background: #fff no-repeat center center
      background-size: 56px
  .coupon,.cash-coupon,.member-card
    .content
      box-sizing: border-box
      width: 100%
      min-height: 68px
      padding: 0 68px 0 10px
      .type
        padding: 8px 0
        font-size: 16px
      .left-side
        display: table-cell
        box-sizing: border-box
        padding-left: 4px
        font-size: 30px
        text-align: center
      .right-side
        display: table-cell
        vertical-align: middle
        padding-left: 8px
  .coupon
    background: coupon-color
  .cash-coupon
    background: cash-coupon-color
  .member-card
    background: member-card-color
  .card-disabled
    background: #949494
  .card-opened
    transform(translateX(-118px))