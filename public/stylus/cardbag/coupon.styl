@import '../common/func'
   
#view-my-coupon
  padding-bottom: 80px
  .f-my-card-wrap
    margin: 10px
  .info-section
    background: #fff
    margin-top: 16px
    .title
      height: 32px
      line-height: 32px
      padding: 0 10px
      background: linear-gradient(#E0E0E0 0%, #E0E0E0 50%, #fff 50%, #fff 100%) no-repeat bottom
      background-size: 100% 1px
    .content
      min-height: 32px
      padding: 8px 10px
      font-size: 12px
      color: #666
    ul.store-wrap
      li
        position: relative
        padding-right: 48px 
        .name
          padding-bottom: 4px
          font-size: 14px
        .phone
          position: absolute
          top: 8px
          right: 16px
          color: green          
    
  .use-tip
    padding: 10px 
    color: weile-red-color
    
