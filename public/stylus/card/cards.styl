@import '../common/func'

#view-card-cards
  #header-right-btn-wrap.active:after
    content: ''
    position: absolute
    top: 12px
    right: 9px
    width: 10px
    height: 10px
    border-radius: 100px
    background: weile-red-color
  .leshangs-wrap
    .leshang
      padding: 14px 16px 6px
      margin-bottom: -10px
      .sort-info-wrap
        padding-top: 2px
        font-size: 12px
        color: #f90        
        i 
          font-size: 12px
          color: #f90
        .star-wrap
          float: right
          height: 19px
          overflow: hidden
  .cards-wrap
    margin: 0 14px
    .card
      position: relative
      height: 94px
      margin-top: 10px
      border-radius: 4px
      background: #fff
      color: #686868
      box-shadow: .5px .5px 1px #a8a8a8
      .content
        height: 66px
        .type
          padding: 3px 8px
          font-size: 12px
        .left-side
          display: table-cell
          box-sizing: border-box
          height: 36px
          padding-left: 12px
          line-height: 36px
          font-size: 30px
          text-align: center
        .right-side
          display: table-cell
          vertical-align: middle
          padding-left: 12px
          padding-right: 66px
          font-size: 12px
      .logo
        position: absolute
        box-sizing: border-box
        width: 48px
        height: 48px
        right: 14px
        top: 12px
        border-radius: 100px
        background: #fff no-repeat center center
        background-size: 48px
        border: 1px solid #CFCFCF
      footer
        position: absolute
        right: 0
        bottom: 0
        left: 0
        box-sizing: border-box
        height: 30px
        line-height: 1
        padding: 8px 10px 0
        color: #fff
        font-size: 12px
        border-radius: 0 0 4px 4px
        border-top: 1px dashed #fff
    .coupon
      .content
        .type
          color: coupon-color
      footer
        background: coupon-color
    .coupon.is-have
      background: coupon-color
      color: #fff
      .content
        .type
          color: #fff
      .logo
        border-bottom: 0
    .cash-coupon
      .content
        .type
          color: cash-coupon-color
      footer
        background: cash-coupon-color
    .cash-coupon.is-have
      background: cash-coupon-color
      color: #fff
      .content
        .type
          color: #fff
      .logo
        border-bottom: 0
    .member-card
      .content
        .type
          color: member-card-color
      footer
        background: member-card-color
    .member-card.is-have
      background: member-card-color
      color: #fff
      .content
        .type
          color: #fff
      .logo
        border-bottom: 0        
    .card.is-have:after
      content: '已持有'
      position: absolute
      top: 28px
      left: 20%
      color: #6D08AD
      font-size: 22px
      padding: 4px 8px
      border-radius: 3px
      border: 1px solid #6D08AD
      transform(rotate(-40deg))
  .bottom-status-wrap
    width: 180px
    height: 32px
    line-height: 32px
    margin: 20px auto 48px
    border: 1px solid #aaa
    border-radius: 100px
    text-align: center
    color: #555
    
    