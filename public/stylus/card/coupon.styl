@import '../common/func'
   
#view-card-coupon
  padding-bottom: 80px
  .coupon 
    position: relative
    padding: 0 10px
    color: #fff
    .content
      box-sizing: border-box
      width: 100%
      min-height: 68px
      padding: 0 72px 16px 0
      .type
        padding: 8px 4px
        font-size: 16px
      .left-side
        display: table-cell
        box-sizing: border-box
        padding-left: 12px
        font-size: 36px
        text-align: center
      .right-side
        display: table-cell
        vertical-align: middle
        padding-left: 12px
    .logo
      position: absolute
      width: 56px
      height: 56px
      right: 22px
      bottom: 42px
      border-radius: 100px
      background: #fff no-repeat center center
      background-size: 48px        
    .footer
      height: 32px
      padding: 0 10px
      border-top: 1px dashed #fff
      line-height: 32px
  .coupon:before,.coupon:after
    content: ''
    position: absolute
    bottom: 25px
    width: 16px
    height: 16px
    border-radius: 100px
    background: #fff
  .coupon:before
    left: -8px
  .coupon:after 
    right: -8px
  .info-section
    background: #fff
    margin-top: 16px
    .title
      height: 32px
      line-height: 32px
      padding: 0 10px
      background: linear-gradient(#E0E0E0 0%, #E0E0E0 50%, #fff 50%, #fff 100%) no-repeat bottom
      background-size: 100% 1px
    .content
      min-height: 32px
      padding: 8px 10px
      font-size: 12px
      color: #666
    ul.store-wrap
      li
        position: relative
        padding: 4px
        padding-right: 48px 
        border-bottom: 1px dashed #ccc
        .name
          padding-bottom: 4px
          font-size: 14px
        .phone
          position: absolute
          top: 8px
          right: 16px
          color: green
      li:last-of-type
        border-bottom: 0
  .handle-button-wrap
    position: fixed
    right: 0
    left: 0
    bottom: 0
    padding: 16px 36px
    text-align: center
    button
      box-sizing: border-box
      width: 100%
      height: 40px
      line-height: 40px
      background: weile-red-color
      color: #fff
      outline: 0
      border: 0
      cursor: pointer
      -webkit-appearance: none
      font-size: 16px
      border-radius: 100px

#second-header .coupon,#view-card-coupon .coupon
  background: coupon-color